{
  "name": "moots",
  "version": "1.0.0",
  "description": "This is a CLI tool to generate express.js boilerplate code.",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register --exec ts-node ./src/index.ts --files",
    "start": "cross-env NODE_ENV=production node ./build/src/index.js",
    "build": "tsc && tsc-alias",
    "lint": "eslint ./src/**/*.ts --fix",
    "format": "prettier --write ./**/*.{ts,json}",
    "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false --testPathPattern=tests --testPathIgnorePatterns=build",
    "swagger": "ts-node swagger.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2",
    "cross-env": "^7",
    "dotenv": "^16",
    "express": "^4",
    "mongodb": "^6.11.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/cors": "^2",
    "@types/express": "^4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4",
    "@typescript-eslint/eslint-plugin": "^6",
    "eslint": "^8",
    "eslint-config-prettier": "^9",
    "eslint-config-standard-with-typescript": "^43",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest": "^27",
    "eslint-plugin-n": "^16",
    "eslint-plugin-prettier": "^5",
    "eslint-plugin-promise": "^6",
    "jest": "^29.7.0",
    "nodemon": "^3",
    "prettier": "^3",
    "supertest": "^7.0.0",
    "swagger-autogen": "^2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10",
    "tsc-alias": "^1",
    "tsconfig-paths": "^4",
    "typescript": "~5.3",
    "typescript-transform-paths": "^3"
  }
}
